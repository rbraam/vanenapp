<securityfilter-config>

    <!-- Define the Login Configuration for this Application -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>
                beheer vanencompetities
            </web-resource-name>
            <url-pattern>/admin/*</url-pattern>
            <url-pattern>/action/admin/*</url-pattern>
            <http-method>POST</http-method>
            <http-method>GET</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>ADMIN</role-name>
            <role-name>SUPERADMIN</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>
                beheer vanenapp
            </web-resource-name>
            <url-pattern>/admin/user/*</url-pattern>
            <url-pattern>action/admin/user/*</url-pattern>
            <http-method>POST</http-method>
            <http-method>GET</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>SUPERADMIN</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>BASIC</auth-method>
        <form-login-config>
            <form-login-page>/login.do</form-login-page>
            <form-error-page>/invalidlogin.do</form-error-page>
            <form-default-page>/index.do</form-default-page>
        </form-login-config>
    </login-config>

    <realm className="com.roybraam.vanenapp.service.SecurityRealm"/>

</securityfilter-config>
